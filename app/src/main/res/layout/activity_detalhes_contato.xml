<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastraContatoActivity">

    <TextView
        android:id="@+id/tv_id_act_detalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/et_nome_completo_act_detalhe"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/et_apelido_act_detalhe"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/btn_salvar_act_detalhe"
        android:textColor="#fff"
        android:text="@string/act_novo_usuario_btn_salvar"
        android:onClick="atualizaContato"
        android:background="@drawable/borda"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btn_apagar_act_detalhe"
        android:textColor="#fff"
        android:text="@string/btn_apagar_act_detalhe"
        android:onClick="apagaContato"
        android:background="@drawable/borda"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

</LinearLayout>